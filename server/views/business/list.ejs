<%- include ../partials/header.ejs%>

<%- include ../partials/main_nav.ejs %>


<!--Main Content-->
<main class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-10">
        <h1><%= title %></h1>
        <a href="/business-list/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle">Add a Business</i></a>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!--Header Row-->
            <tr class="d-flex">
                <th class="text-center col-2 ">Name</th>
                <th class="text-center col-3">Email</th>
                <th class="text-center col-3 ">Phone No.</th>    
                <th class="text-center col-2 "></th>
                <th class="text-center col-2 "></th>
            </tr>
           
            <!--Repeatable Template Row-->
            
            <% for(let count = 0; count < BusinessList.length; count++) { %> 
                <tr class="d-flex">
                    <td class="text-center col-2"><%= BusinessList[count].name %></td>
                    <td class="text-center col-3"><%= BusinessList[count].email %></td>
                    <td class="text-center col-3"><%= BusinessList[count].phone%></td>
                    <td class="text-center col-2">
                        <a href="/business-list/edit/<%= BusinessList[count]._id %>" class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i> Update</a>
                    </td>
                    <td class="text-center col-2">
                        <a href="/business-list/delete/<%= BusinessList[count]._id %>" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            <% } %>        
            </table>
        </div>
    </div>
</main>


<!--Bottom Nav Footer-->

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs%>