<%- include ../partials/header.ejs%>

<%- include ../partials/main_nav.ejs %>

<!--Content for the add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-8">
        <h1><%= title %></h1>

        <form class="form" method="post">
            <div class="form-group">
                <label for="nameTextField">Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the Name"
                name="name" 
                value=" <%= business.name %>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField"> Email</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter the Email Address"
                name="email"
                value=" <%= business.email %>"
                 required>
            </div>
                

            <div class="form-group">
                <label for="priceTextField">Phone</label>
                <input type="text" class="form-control"
                id="phoneTextField"
                placeholder="Enter the Phone Number"
                name="phone" 
                value=" <%= business.phone %>"
                required>
            </div>
            
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
               
                <a href="/business-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
        </form>

    </div>
    
    </div>
</div>


<!--Bottom Nav Footer-->

<%- include ../partials/bottom_nav.ejs %>

